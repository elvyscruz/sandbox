{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/frontend/src",
  "monorepo": true,
  "root": "apps/frontend",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/frontend/tsconfig.app.json"
  },
  "projects": {
    "frontend": {
      "type": "application",
      "root": "apps/frontend",
      "entryFile": "main",
      "sourceRoot": "apps/frontend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/frontend/tsconfig.app.json"
      }
    },
    "micro1": {
      "type": "application",
      "root": "apps/micro1",
      "entryFile": "main",
      "sourceRoot": "apps/micro1/src",
      "compilerOptions": {
        "tsConfigPath": "apps/micro1/tsconfig.app.json"
      }
    },
    "micro2": {
      "type": "application",
      "root": "apps/micro2",
      "entryFile": "main",
      "sourceRoot": "apps/micro2/src",
      "compilerOptions": {
        "tsConfigPath": "apps/micro2/tsconfig.app.json"
      }
    }
  }
}